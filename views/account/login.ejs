<h1 class="detailsTitle"><%= title || "Login" %></h1>
<%- messages() %>

<div class="formstyle">
  <form action="/account/login" method="post">
    <label for="account_email">Email:</label><br />
    <input type="email" name="account_email" id="account_email" required placeholder="someone@yourdomain.com" value="<%= locals.account_email || '' %>"/><br />
    
    <label for="account_password">Password:</label><br />
    <input type="password" name="account_password" id="account_password" required placeholder="YourP@ssW0rd"/><br />
    
    <button type="submit">LOGIN</button>
  </form>
  <p>No account? <a href="/account/register">Sign-up</a></p>
</div>